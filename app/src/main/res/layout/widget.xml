<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp">

    <TextView
            android:id="@+id/textview_quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            style="@style/WidgetFontDate"
            tools:text="Do. Or do not. There is no try."/>

    <LinearLayout
            android:id="@+id/linearlayout_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

        <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/hour_border_180">

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/hour_border_0">

        </RelativeLayout>

    </LinearLayout>

    <ImageView
            android:id="@+id/imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/background_day"/>

    <LinearLayout
            android:id="@+id/linearlayout_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

        <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="8dp">

            <TextView
                    android:id="@+id/textview_hours"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    style="@style/WidgetFontHour"
                    tools:text="16"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="8dp">

            <TextView
                    android:id="@+id/textview_minutes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    style="@style/WidgetFontHour"
                    tools:text="00"/>

        </RelativeLayout>

    </LinearLayout>

    <TextView
            android:id="@+id/textview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/linearlayout_back"
            android:layout_alignEnd="@+id/linearlayout_back"
            android:paddingRight="4dp"
            style="@style/WidgetFontDate"
            tools:text="16. decembar 2016."/>

</RelativeLayout>